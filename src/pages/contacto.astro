---
import Layout from "../layouts/Layout.astro";
import ContactoForm from "../components/contacto/ContactoForm.astro";
import { Image } from "astro:assets";

import iconPhone from "../images/icons/icon-phone-bl.svg";
import iconPin from "../images/icons/icon-pin-bl.svg";

import "../styles/contacto.scss";
---

<Layout title="Meta Consulting.">
    <section>
        <div
            class="uk-grid-match uk-child-width-expand@s uk-height-1-1"
            uk-grid
        >
            <div class="uk-height-1-1 uk-flex uk-flex-middle uk-flex-center">
                <div class="uk-width-3-4">
                    <h1 class="title white uk-text-bold">Contacto</h1>
                    <div class="uk-flex uk-margin-top">
                        <Image src={iconPin} alt="pin" />
                        <span class="white paragraph uk-padding"
                            >Av Pablo Neruda 3107 int 3, Fraccionamiento Providencia Cuarta Secci√≥n, CP 44660, Guadalajara, Jalisco</span
                        >
                    </div>
                    <div class="uk-flex uk-margin-top">
                        <Image src={iconPhone} alt="phone" />
                        <span class="white paragraph uk-padding"
                            > 3320411563 - 3320411190 </span
                        >
                    </div>
                </div>
            </div>
            <div>
                <ContactoForm />
            </div>
        </div>
    </section>
    <div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1866.1617229317028!2d-103.39064886121405!3d20.69708630432397!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8428ae458b916f8b%3A0x566b64543e288a47!2sAv%20Pablo%20Neruda%203107%2C%20Providencia%204a.%20Secc%2C%2044639%20Guadalajara%2C%20Jal.!5e0!3m2!1ses-419!2smx!4v1700872029763!5m2!1ses-419!2smx" width="100%" height="500px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
